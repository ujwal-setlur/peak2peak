---
import logo from '../assets/peak2peak.svg';
---

<section id="hero" class="flex w-full flex-col items-center justify-center px-5 pb-[80px]">
  <div class="flex w-full max-w-screen-2xl flex-col items-center justify-center">
    <!-- Logo section -->
    <div class="z-10 flex h-[calc(100vh)] flex-col items-center justify-center">
      <img src={logo.src} alt="Peak2Peak" />
      <h6
        class="mt-5 text-center font-playFair text-base font-bold italic tracking-wide text-white [word-spacing:1rem] sm:text-md"
      >
        Take That Step
      </h6>
    </div>

    <div class="z-10 flex w-full flex-col justify-center gap-10 lg:flex-row">
      <!-- Left section -->
      <div class="flex w-full flex-1">
